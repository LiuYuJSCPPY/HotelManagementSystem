@model HotelManagementSystem.Model.PaymentType

<div class="modal-content">
    <div class="modal-header">
       
       <h5 class="modal-title" id="exampleModalLabel">新增房間分類</h5>
     

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="ActionForm">
            <input type="hidden" id="RooomTypeId" value="@Model.Id">
            @Html.LabelFor(p => p.PaymentTypeName, new { @class = "form-label" })
            @Html.TextBoxFor(p => p.PaymentTypeName,new { @class = "form-control",Value= Model.PaymentTypeName })
        </form>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
        <button id="DataBtn" type="button" class="btn btn-primary">儲存</button>
    </div>
</div>



<div id="Error">

</div>


<script>
    $("#DataBtn").click(function () {
        $.ajax({
            url: "@Url.Action("Action", "PaymentTypes")",
            type: "post",
            data: $("#ActionForm").serialize(),
        }).done(function (respone) {
            debugger;
            if (respone.Success) {
                location.reload();
            } else {
                $("#Error").html(respone.Message);
            }
        })
    })
</script>