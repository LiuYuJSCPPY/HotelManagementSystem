@model HotelManagementSystem.Model.PaymentType


<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">刪除房間分類</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="ActionForm">
            <input type="hidden" id="RooomTypeId" value="@Model.Id">
        </form>
        <div class="alert alert-danger" role="alert">
            你確定要刪除嗎?
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
        <button id="Deletebtn" type="button" class="btn btn-primary">刪除</button>
    </div>
</div>
<div id="DeleteError">

</div>

<script>
    $("#Deletebtn").click(function () {
        $.ajax({
            url: "@Url.Action("Delete", "PaymentTypes")",
            type: "post",

        }).done(function (respone) {
            debugger;
            if (respone.Success) {
                window.location.href = "@Url.Action("Index", "PaymentTypes")";
            } else {
                $("#DeleteError").html(respone.Message);
            }
        })
    } )
</script>
