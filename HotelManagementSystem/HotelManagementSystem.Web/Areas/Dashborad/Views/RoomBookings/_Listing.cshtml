@model IEnumerable<HotelManagementSystem.Model.RoomBookings>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.rooms.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CutomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CutomerAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfMeMbers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
