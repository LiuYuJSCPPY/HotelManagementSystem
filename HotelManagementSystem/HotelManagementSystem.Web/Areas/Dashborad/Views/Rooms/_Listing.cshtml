@model IEnumerable<HotelManagementSystem.Model.Rooms>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.bookingStatus.BookingStatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomTypes.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bookingStatus.BookingStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roomTypes.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <button id="ActionButton" data-herf="@Url.Action("Action", "Rooms", new {Id = item.Id })" type="button" class="data-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#Action">
                    更新
                </button>
                <button id="ActionButton" data-herf="@Url.Action("Delete", "Rooms", new {Id = item.Id })" type="button" class="data-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#Action">
                    刪除
                </button>

            </td>
        </tr>
    }
